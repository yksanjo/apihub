# API Key Vault Configuration

# Vault settings
VAULT_PATH=.keyvault/vault.json
AUDIT_LOG_PATH=.keyvault/audit.log

# Encryption settings
ENCRYPTION_KEY_LENGTH=32

# Rotation settings (in hours)
AUTO_ROTATION_INTERVAL=24

# Log settings
MAX_LOG_SIZE=10485760  # 10MB in bytes

# API settings (for programmatic access)
API_PORT=3000
API_HOST=localhost
